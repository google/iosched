<!-- A vector version of the I/O hashtag (#io16). This vector drawable is set up specifically for
     animation. The stroke of the numbers 1 & 6 is composed of 4 colors and animates around the
     perimeter. -->
<vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="360dp"
    android:height="200dp"
    android:viewportWidth="360"
    android:viewportHeight="200">

    <path
        android:name="hash"
        android:pathData="@string/io_logo_path_hash"
        android:strokeColor="@color/io16_primary_purple"
        android:strokeLineCap="round"
        android:strokeWidth="@dimen/io_logo_stroke_width" />

    <path
        android:name="i_body"
        android:pathData="@string/io_logo_path_i_body"
        android:strokeColor="@color/io16_primary_purple"
        android:strokeWidth="@dimen/io_logo_stroke_width" />

    <path
        android:name="i_dot"
        android:pathData="@string/io_logo_path_i_dot"
        android:strokeColor="@color/io16_primary_purple"
        android:strokeWidth="@dimen/io_logo_stroke_width" />

    <path
        android:name="o"
        android:pathData="@string/io_logo_path_o"
        android:strokeColor="@color/io16_primary_purple"
        android:strokeWidth="@dimen/io_logo_stroke_width" />

    <!-- Here's the trick: place four copies of the path for the number one on top of each other.
         Set different trim values to show only a quarter of each path. Then animate
         the trimPathOffset property to make the shown segment describe the whole path. -->
    <path
        android:name="one_1"
        android:pathData="@string/io_logo_path_one"
        android:strokeColor="@color/io16_accent_light_cyan"
        android:strokeWidth="@dimen/io_logo_stroke_width"
        android:trimPathStart="0"
        android:trimPathEnd="0.25" />

    <path
        android:name="one_2"
        android:pathData="@string/io_logo_path_one"
        android:strokeColor="@color/io16_accent_red"
        android:strokeWidth="@dimen/io_logo_stroke_width"
        android:trimPathStart="0.25"
        android:trimPathEnd="0.5" />

    <path
        android:name="one_3"
        android:pathData="@string/io_logo_path_one"
        android:strokeColor="@color/io16_primary_purple"
        android:strokeWidth="@dimen/io_logo_stroke_width"
        android:trimPathStart="0.5"
        android:trimPathEnd="0.75" />

    <path
        android:name="one_4"
        android:pathData="@string/io_logo_path_one"
        android:strokeColor="@color/io16_accent_cyan"
        android:strokeWidth="@dimen/io_logo_stroke_width"
        android:trimPathStart="0.75"
        android:trimPathEnd="1" />

    <!-- Same for the number six. -->
    <path
        android:name="six_1"
        android:pathData="@string/io_logo_path_six"
        android:strokeColor="@color/io16_accent_light_cyan"
        android:strokeWidth="@dimen/io_logo_stroke_width"
        android:trimPathStart="0"
        android:trimPathEnd="0.25" />

    <path
        android:name="six_2"
        android:pathData="@string/io_logo_path_six"
        android:strokeColor="@color/io16_accent_red"
        android:strokeWidth="@dimen/io_logo_stroke_width"
        android:trimPathStart="0.25"
        android:trimPathEnd="0.5" />

    <path
        android:name="six_3"
        android:pathData="@string/io_logo_path_six"
        android:strokeColor="@color/io16_primary_purple"
        android:strokeWidth="@dimen/io_logo_stroke_width"
        android:trimPathStart="0.5"
        android:trimPathEnd="0.75" />

    <path
        android:name="six_4"
        android:pathData="@string/io_logo_path_six"
        android:strokeColor="@color/io16_accent_cyan"
        android:strokeWidth="@dimen/io_logo_stroke_width"
        android:trimPathStart="0.75"
        android:trimPathEnd="1" />

</vector>
