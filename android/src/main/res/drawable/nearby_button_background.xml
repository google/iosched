<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetTop="8dp"
    android:insetLeft="8dp"
    android:insetBottom="8dp"
    android:insetRight="8dp">

    <selector>
        <item
            android:state_selected="true" android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/theme_accent_1_light" />
                <corners android:radius="4dp" />
            </shape>
        </item>
        <item
            android:state_selected="true" android:state_focused="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/theme_accent_1_light" />
                <corners android:radius="4dp" />
            </shape>
        </item>
        <item android:state_selected="true">
            <shape android:shape="rectangle">
                <solid android:color="@color/theme_accent_1" />
                <corners android:radius="4dp" />
            </shape>
        </item>

        <!-- no items -->
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#2fff" />
                <corners android:radius="4dp" />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle">
                <solid android:color="#1fff" />
                <corners android:radius="4dp" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#0000" />
                <corners android:radius="4dp" />
            </shape>
        </item>
    </selector>

</inset>
