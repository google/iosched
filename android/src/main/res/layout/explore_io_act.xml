<!-- ExploreIOActivity layout seen when users enter the app after the WelcomeActivity. -->
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".explore.ExploreIOActivity"
        android:fitsSystemWindows="true">

    <!-- Main layout -->
    <RelativeLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:background="@color/light_grey"
            android:layout_height="match_parent"
            app:shadowDrawable="@drawable/header_shadow">
        <LinearLayout style="@style/HeaderBar"
            android:id="@+id/headerbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar_base"
                layout="@layout/toolbar_actionbar" />
        </LinearLayout>

        <fragment android:name="com.google.samples.apps.iosched.explore.ExploreIOFragment"
            android:id="@+id/explore_library_frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/headerbar"/>

    </RelativeLayout>

    <!-- Nav drawer -->
    <include layout="@layout/navdrawer" />

</android.support.v4.widget.DrawerLayout>