<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/image_header_padding_top"
        android:src="@drawable/ic_nav_schedule"
        android:contentDescription="@string/schedule_icon_image_view_content_description" />

    <androidx.wear.widget.WearableRecyclerView
        android:id="@+id/wearableRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/recycler_view_padding_bottom"
        android:scrollbars="vertical"
        app:layoutManager="LinearLayoutManager"
        tools:ignore="UnusedAttribute" />

    <!-- TODO: Convert Linear to ConstraintLayout & check on performance issues w/ Constraints. -->
    <!-- TODO: Add a loading screen (check mobile version). -->
</LinearLayout>
