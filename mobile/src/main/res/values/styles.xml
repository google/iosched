<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent ="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
    </style>

    <!-- Text appearances -->

    <!-- For titles, e.g. Event Detail, Speaker Detail -->
    <style name="TextAppearance.IOSched.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="fontFamily">@font/google_sans</item>
    </style>

    <!-- For smaller titles, e.g. Schedule day decorations -->
    <style name="TextAppearance.IOSched.H2" parent="@style/TextAppearance.IOSched.H1">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <!-- For other prominent text -->
    <style name="TextAppearance.IOSched.H3" parent="@style/TextAppearance.IOSched.H1">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="TextAppearance.IOSched.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <!-- List item primary text, e.g. event titles, codelab titles -->
    <style name="TextAppearance.IOSched.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <!-- Intermediate style to make further style extensions below easier to follow -->
    <style name="TextAppearance.IOSched.Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <!-- Section headers -->
    <style name="TextAppearance.IOSched.Overline" parent="@style/TextAppearance.IOSched.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.IOSched.NoticeBody" parent="@style/Widget.IOSched.MultilineBody">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.IOSched.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="TextAppearance.IOSched.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Schedule -->
    <style name="TextAppearance.IOSched.ReservationStatus" parent="@style/TextAppearance.IOSched.Body2">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.IOSched.Tag" parent="@style/TextAppearance.IOSched.Body2">
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">@dimen/tag_letter_spacing</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="TextAppearance.IOSched.FiltersLabel" parent="TextAppearance.IOSched.H2">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Map -->
    <style name="TextAppearance.IOSched.Map.MarkerLabel" parent="TextAppearance.IOSched.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <!-- Info -->
    <style name="TextAppearance.IOSched.CollapsibleCard" parent="@style/TextAppearance.IOSched.ListPrimary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="TextAppearance.IOSched.Info.AssistantApp" parent="TextAppearance.IOSched.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Home -->
    <style name="TextAppearance.IOSched.CountdownLabel" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.IOSched.Feed.Session.Time" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Settings -->
    <style name="TextAppearance.IOSched.AboutButtons" parent="@style/TextAppearance.IOSched.ListPrimary">
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <!-- Account dialogs -->
    <style name="TextAppearance.IOSched.AccountDialog.Username" parent="@style/TextAppearance.IOSched.ListPrimary" />

    <!-- Widget styles -->

    <style name="Widget.IOSched" parent="@android:style/Widget.Material" />

    <style name="Widget.IOSched.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.IOSched.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:paddingEnd">8dp</item>
        <item name="contentInsetStartWithNavigation">?sessionListKeyline</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="titleTextAppearance">@style/TextAppearance.IOSched.ToolbarTitle</item>
    </style>

    <style name="Widget.IOSched.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.IOSched.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <!-- textAppearance alone doesn't support line spacing attrs. Multiline body text will use
         style="Widget.IOSched.MultilineBody" instead of the equivalent textAppearance.
    -->
    <style name="Widget.IOSched.MultilineBody">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Schedule -->
    <style name="Widget.IOSched.Tag">
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.IOSched.Tag</item>
    </style>

    <style name="Widget.IOSched.Tag.Inline">
        <item name="android:drawablePadding">@dimen/spacing_micro</item>
        <item name="android:drawableStart">@drawable/tag_dot</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.IOSched.EventFilters">
        <item name="android:letterSpacing">@dimen/tag_letter_spacing</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:strokeColor">?colorControlLight</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="outlineWidth">1dp</item>
        <item name="clearIcon">@drawable/tag_clear</item>
        <item name="foreground">?selectableItemBackground</item>
        <item name="showIcons">true</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.IOSched.TimeHeaders">
        <item name="android:width">@dimen/session_keyline</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:padding">@dimen/schedule_item_padding_vertical</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="timeTextSize">@dimen/time_header_time_text_size</item>
        <item name="meridiemTextSize">@dimen/time_header_meridiem_text_size</item>
    </style>

    <style name="Widget.IOSched.DayIndicatorDecoration">
        <item name="android:color">?colorPrimary</item>
        <item name="insetVertical">8dp</item>
    </style>

    <style name="Widget.IOSched.DaySeparatorDecoration">
        <item name="android:width">@dimen/day_header_decor_width</item>
        <item name="android:height">@dimen/day_header_decor_height</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/day_header_text_size</item>
        <item name="verticalBias">0.67</item>
    </style>

    <!-- Agenda -->
    <style name="Widget.IOSched.DateHeaders">
        <item name="android:width">@dimen/day_header_decor_width</item>
        <item name="android:height">@dimen/day_header_decor_height</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/day_header_text_size</item>
        <item name="verticalBias">0.67</item>
    </style>

    <!-- Account dialogs -->
    <style name="Widget.IOSched.BorderlessButton.NormalText" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.IOSched.AccountDialog.ActionButton" parent="">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.IOSched.AccountDialog.ManageAccountButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialComponents.Chip</item>
    </style>

    <!-- Onboarding -->
    <style name="Widget.IOSched.OnboardingText">
        <item name="android:textAppearance">@style/TextAppearance.IOSched.H1</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <!-- Speaker Detail -->
    <style name="Widget.IOSched.Speaker" />

    <style name="Widget.IOSched.Speaker.Title">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.IOSched.H1</item>
    </style>

    <style name="Widget.IOSched.Speaker.SocialButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
    </style>

    <!-- Home -->
    <style name="Widget.IOSched.Feed" />

    <style name="Widget.IOSched.Feed.Session" />

    <style name="Widget.IOSched.Feed.Session.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

    <style name="Widget.IOSched.Feed.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?android:attr/colorControlHighlight</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/feed_card_corner_radius</item>
    </style>

    <style name="Widget.IOSched.Feed.SocialChannelButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">@dimen/a11y_min_touch_target</item>
        <item name="android:layout_height">@dimen/a11y_min_touch_target</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Settings -->
    <style name="Widget.IOSched.Settings" />

    <style name="Widget.IOSched.Settings.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">@dimen/margin_small</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.IOSched.Settings.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>

    <style name="Widget.IOSched.Settings.Button.About">
        <item name="android:textAppearance">@style/TextAppearance.IOSched.AboutButtons</item>
    </style>

    <!-- Info -->
    <style name="Widget.IOSched.EventCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?colorControlLight</item>
        <item name="strokeWidth">1dp</item>
        <item name="eventTypeLogoBackground">?eventCardHeaderBackground</item>
    </style>

    <!-- Navigation -->
    <style name="Widget.IOSched.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/ioschedNavigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <style name="Widget.IOSched.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>

    <style name="Widget.IOSched.HashtagIoDecoration">
        <item name="android:drawable">@drawable/hashtag_io19</item>
        <item name="margin">@dimen/nav_item_horizontal_padding</item>
    </style>

    <!-- Map -->
    <style name="Widget.IOSched.Map" />

    <style name="Widget.IOSched.Map.MarkerTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">@style/TextAppearance.IOSched.H3</item>
        <!-- Use dp because we need the title and subtitle to always fit in the sheet peak area. -->
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="Widget.IOSched.Map.MarkerSubtitle" parent="Widget.IOSched.Map.MarkerTitle">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <!-- Use dp because we need the title and subtitle to always fit in the sheet peak area. -->
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <!-- Misc -->
    <style name="Widget.IOSched.EmptyResults">
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:drawableTop">@drawable/no_items_found_204</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
