<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.google.samples.apps.iosched.ui.signin.NotificationsPreferenceViewModel" />
    </data>

    <LinearLayout
        style="@style/Widget.IOSched.Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/margin_large"
            android:paddingHorizontal="@dimen/margin_large"
            android:text="@string/notifications_preference_dialog_title"
            android:textAppearance="@style/TextAppearance.IOSched.DialogTitle" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:paddingHorizontal="@dimen/margin_large"
            android:text="@string/notifications_preference_dialog_content"
            android:textAppearance="@style/TextAppearance.IOSched.DialogContent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/notifications_pref_button_no"
                style="@style/Widget.IOSched.BorderlessButton"
                android:onClick="@{() -> viewModel.onNoClicked()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/no" />

            <Button
                android:id="@+id/notifications_pref_button_yes"
                style="@style/Widget.IOSched.RaisedButton"
                android:onClick="@{() -> viewModel.onYesClicked()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/yes" />

            <Button
                android:id="@+id/notifications_installed_button"
                style="@style/Widget.IOSched.RaisedButton"
                android:visibility="gone"
                android:onClick="@{() -> viewModel.onInstallClicked()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/installApp" />

        </LinearLayout>

    </LinearLayout>
</layout>
