<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.google.samples.apps.iosched.ui.search.SearchViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            style="@style/Widget.IOSched.AppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:dividerHorizontal"
            android:fitsSystemWindows="true"
            android:showDividers="middle"
            app:navigationIcon="@drawable/ic_arrow_back">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:iconifiedByDefault="false"
                    android:queryBackground="@color/transparent"
                    android:queryHint="@string/search_schedule_hint"
                    android:searchHintIcon="@null"
                    android:searchIcon="@null"
                    tools:targetApi="lollipop_mr1">

                </SearchView>
            </androidx.appcompat.widget.Toolbar>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/active_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="12dp"
                app:goneUnless="@{viewModel.hasAnyFilters}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:selectedFilters="@{viewModel.selectedFilterChips}"
                tools:itemCount="3"
                tools:listitem="@layout/item_filter_chip"
                tools:visibility="visible" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:goneUnless="@{!viewModel.isEmpty}"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_session" />

        <TextView
            android:id="@+id/empty"
            style="@style/Widget.IOSched.EmptyResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/schedule_page_padding_bottom"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:text="@string/search_schedule_no_results"
            app:goneUnless="@{viewModel.isEmpty}"
            tools:targetApi="o"
            tools:visibility="visible" />

        <fragment
            android:id="@+id/filter_sheet"
            android:name="com.google.samples.apps.iosched.ui.search.SearchFilterFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="?actionBarSize"
            app:layout_behavior="com.google.samples.apps.iosched.widget.BottomSheetBehavior"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:behavior_skipCollapsed="true"
            tools:ignore="FragmentTagUsage"
            tools:layout="@layout/fragment_filters" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
