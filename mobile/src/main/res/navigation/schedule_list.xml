<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_list_nav_graph"
    app:startDestination="@id/navigation_schedule_list">

    <fragment
        android:id="@+id/navigation_schedule_list"
        android:name="com.google.samples.apps.iosched.ui.schedule.ScheduleFragment"
        android:label="@string/title_schedule"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/to_search"
            app:destination="@id/navigation_schedule_search" />
    </fragment>

    <fragment
        android:id="@+id/navigation_schedule_search"
        android:name="com.google.samples.apps.iosched.ui.search.SearchFragment"
        tools:layout="@layout/fragment_search" />
</navigation>
